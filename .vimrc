" ----------------
"    Appearence
" ----------------
syntax on
set background=dark
set t_Co=256
let g:solarized_termcolors=256
colorscheme solarized


" ----------------
"  Other sutff
" ----------------

" case insensitive search
set ic

" Highlight search
set hls

" Line numbers
set number

" Indent
set autoindent
filetype indent on
set tabstop=4
set shiftwidth=4
set expandtab

" ---------------
"  Keybindings 
" ---------------

:imap jj <Esc>



